using System;
namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            float locationX, locationY;
            float paintLength;
            

            Console.WriteLine("Введите Ваши координаты");
            locationX = EnterFloat("X");
            locationY = EnterFloat("Y");

            Player player = new Player(locationX, locationY);

            player.ShowInfo();
            Console.WriteLine("\nВведите длину стороны квадрата для отрисовки");
            paintLength = EnterFloat("Длина стороны квадрата");

            Painter painter = new Painter(locationX, locationY, paintLength);
            
            painter.Paint();
        }

        static float EnterFloat(string digitName)
        {
            bool isInt = false;
            float digit = 0;

            Console.WriteLine(digitName + ":");

            while (!isInt)
            {
                Console.WriteLine("Введите корректное число");
                isInt = float.TryParse(Console.ReadLine(), out digit);
            }
            return digit;
        }
    }

    class Painter
    {
        public float LocationX { get; private set; }
        public float LocationY { get; private set; }
        public float Length { get; private set; }

        public Painter(float locationX, float locationY, float length)
        {
            LocationX = locationX;
            LocationY = locationY;
            Length = length;
        }
        
        public void Paint()
        {
            float firstPointX = LocationX - Length / 2;
            float firstPointY = LocationY + Length / 2;
            Console.WriteLine($"\nВы отрисованы в квадрате с следущими координатами угловых точек" +
                $"\n1){firstPointX}, {firstPointY}" +
                $"\n2){firstPointX + Length}, {firstPointY}" +
                $"\n3){firstPointX + Length}, {firstPointY - Length}" +
                $"\n4){firstPointX}, {firstPointY - Length}");
        }
    }

    class Player
    {
        public float LocationX { get; private set; }
        public float LocationY { get; private set; }

        public Player(float locationX, float locationY)
        {
            LocationX = locationX;
            LocationY = locationY;
        }

        public void ShowInfo()
        {
            Console.WriteLine($"\nКоординаты ({LocationX},{LocationY})");
        }
    }
}
